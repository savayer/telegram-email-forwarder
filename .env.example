# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root      # Use 'root' if connecting to existing MySQL, or 'telegram_bot' with Docker
DB_PASSWORD=password
DB_DATABASE=telegram_bot

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Encryption Keys (run 'npm run generate:keys' to create these)
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_IV=your_encryption_iv_here

# For MySQL in Docker (optional, defaults in docker-compose.yml will be used if not provided)
MYSQL_ROOT_PASSWORD=rootpassword

